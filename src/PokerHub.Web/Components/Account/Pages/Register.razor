@page "/Account/Register"

@using Microsoft.AspNetCore.Http

@inject NavigationManager NavigationManager

<PageTitle>Cadastro - PokerHub</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon">
                <svg xmlns="http://www.w3.org/2000/svg" height="48" viewBox="0 -960 960 960" width="48" fill="currentColor">
                    <path d="M180-120q-24 0-42-18t-18-42v-600q0-24 18-42t42-18h600q24 0 42 18t18 42v600q0 24-18 42t-42 18H180Zm0-60h600v-600H180v600Zm300-100q45 0 84-18.5t66-51.5q-38-22-78.5-33T480-394q-31 0-71.5 11T330-350q27 33 66 51.5t84 18.5Zm0-170q33 0 56.5-23.5T560-530q0-33-23.5-56.5T480-610q-33 0-56.5 23.5T400-530q0 33 23.5 56.5T480-450ZM180-180v-600 600Z"/>
                </svg>
            </div>
            <h1 class="auth-title">PokerHub</h1>
            <p class="auth-subtitle">Crie sua conta</p>
        </div>

        @if (!string.IsNullOrEmpty(Error))
        {
            <div class="auth-error">@Error</div>
        }

        <form action="/Account/PerformRegister" method="post">
            <AntiforgeryToken />
            <input type="hidden" name="returnUrl" value="@ReturnUrl" />

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required autocomplete="username" />
            </div>

            <div class="form-group">
                <label for="password">Senha</label>
                <input type="password" id="password" name="password" required autocomplete="new-password" />
                <span class="form-hint">Minimo 6 caracteres</span>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirmar Senha</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required autocomplete="new-password" />
            </div>

            <button type="submit" class="auth-button">Cadastrar</button>
        </form>

        <div class="auth-divider"></div>

        <div class="auth-links">
            <span class="auth-links-text">Ja tem uma conta?</span>
            <a href="@GetLoginUrl()">Fazer login</a>
        </div>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .auth-card {
        background: var(--mud-palette-surface);
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        padding: 2rem;
        width: 100%;
        max-width: 400px;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .auth-icon {
        color: var(--mud-palette-primary);
        margin-bottom: 0.5rem;
    }

    .auth-title {
        color: var(--mud-palette-primary);
        font-size: 1.75rem;
        font-weight: 500;
        margin: 0;
    }

    .auth-subtitle {
        color: var(--mud-palette-text-secondary);
        font-size: 0.875rem;
        margin: 0.25rem 0 0;
    }

    .auth-error {
        background: #ffebee;
        border-left: 4px solid #f44336;
        color: #c62828;
        padding: 0.75rem 1rem;
        margin-bottom: 1rem;
        border-radius: 4px;
        font-size: 0.875rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-group label {
        display: block;
        color: var(--mud-palette-text-secondary);
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
    }

    .form-group input {
        width: 100%;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        background: var(--mud-palette-background);
        border: 1px solid var(--mud-palette-lines-default);
        border-radius: 4px;
        color: var(--mud-palette-text-primary);
        transition: border-color 0.2s;
        box-sizing: border-box;
    }

    .form-group input:focus {
        outline: none;
        border-color: var(--mud-palette-primary);
        border-width: 2px;
    }

    .form-hint {
        display: block;
        color: var(--mud-palette-text-secondary);
        font-size: 0.75rem;
        margin-top: 0.25rem;
    }

    .auth-button {
        width: 100%;
        padding: 0.875rem;
        font-size: 1rem;
        font-weight: 500;
        background: var(--mud-palette-primary);
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.2s;
        margin-top: 0.5rem;
    }

    .auth-button:hover {
        filter: brightness(1.1);
    }

    .auth-divider {
        height: 1px;
        background: var(--mud-palette-lines-default);
        margin: 1.5rem 0;
    }

    .auth-links {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .auth-links-text {
        color: var(--mud-palette-text-secondary);
        font-size: 0.875rem;
    }

    .auth-links a {
        color: var(--mud-palette-primary);
        text-decoration: none;
        font-size: 0.875rem;
    }

    .auth-links a:hover {
        text-decoration: underline;
    }
</style>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    [SupplyParameterFromQuery]
    private string? Error { get; set; }

    private string GetLoginUrl()
    {
        if (string.IsNullOrEmpty(ReturnUrl))
            return "Account/Login";
        return $"Account/Login?ReturnUrl={Uri.EscapeDataString(ReturnUrl)}";
    }
}
