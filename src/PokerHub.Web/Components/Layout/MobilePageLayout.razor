@* Wrapper completo para pÃ¡ginas mobile com header + content + bottom nav *@

<div class="mobile-container">
    @if (Header != null)
    {
        @Header
    }
    <div class="mobile-content @(HasFab ? "with-fab" : "") @ContentClass">
        @ChildContent
    </div>
    @if (BottomNav != null)
    {
        @BottomNav
    }
</div>

@code {
    [Parameter] public RenderFragment? Header { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; } = null!;
    [Parameter] public RenderFragment? BottomNav { get; set; }
    [Parameter] public bool HasFab { get; set; } = false;
    [Parameter] public string? ContentClass { get; set; }
}
